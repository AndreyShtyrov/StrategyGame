<UserControl x:Class="StrategyGame.WeatherControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StrategyGame"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="WeatherImage" Stretch="Fill" Height="32" Width="52" Grid.Row="0" Grid.ColumnSpan="2"/>
        <Label x:Name="Player1Enforcment" Grid.Row="1" Grid.Column="0" />
        <Label x:Name="Player2Enforcment" Grid.Row="1" Grid.Column="1" />
    </Grid>
</UserControl>
